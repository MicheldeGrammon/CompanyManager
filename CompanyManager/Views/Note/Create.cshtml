@model CompanyManager.Models.Note

<form method="post" asp-action="CreatePost">
    <div class="borderBlack">
        <div asp-validation-summary="ModelOnly"></div>
        <input asp-for="Id" hidden />

        <h5>Create new note</h5>
        <h5>Info</h5>
        <div class="row">
            <div class="col-2">
                <p>First Employee:</p>
            </div>
            <div class="colForm">
                <input asp-for="Employee" class="form-control" />
                <span asp-validation-for="Employee"></span>
            </div>
        </div>

        <div class="row">
            <div class="col-2">
                <p>Invoice Number:</p>
            </div>
            <div class="colForm">
                <input asp-for="InvoiceNumber" class="form-control" />
                <span asp-validation-for="InvoiceNumber"></span>
            </div>
        </div>
        <div class="flex">
            <input type="submit" class="btn btn-primary" value="Create" />
            &nbsp;
            <a asp-controller="Companies" asp-action="Index" class="btn btn-dark"><i class="fa-solid fa-right-from-bracket"></i> &nbsp;Back to list copmany</a>
        </div>
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
