@model CompanyManager.Models.Employee

<form method="post" asp-action="DeletePost">
    <input asp-for="Id" hidden />
    <div class="borderBlack">

        <h5>Delete employee</h5>
        <h5>Info</h5>
        <div class="row">
            <div class="col-2">
                <p>First name:</p>
            </div>
            <div class="colForm">
                <input asp-for="FirstName" disabled class="form-control" />
            </div>
        </div>

        <div class="row">
            <div class="col-2">
                <p>Last name:</p>
            </div>
            <div class="colForm">
                <input asp-for="LastName" disabled class="form-control" />
            </div>
        </div>

        <div class="row">
            <div class="col-2">
                <p>Title:</p>
            </div>
            <div class="colForm">
                <input asp-for="Title" disabled class="form-control" />
            </div>
        </div>

        <div class="row">
            <div class="col-2">
                <p>Birth date:</p>
            </div>
            <div class="colForm">
                <input type="date" disabled asp-for="BirthDate" class="form-control" />
            </div>
        </div>

        <div class="row">
            <div class="col-2">
                <p>Position:</p>
            </div>
            <div class="colForm">
                <input asp-for="Position" disabled class="form-control" />
            </div>
        </div>

        <div class="flex">
            <input type="submit" class="btn btn-danger" value="Delete" />
            &nbsp;
            <a asp-controller="Companies" asp-action="Index" class="btn btn-dark"><i class="fa-solid fa-right-from-bracket"></i> &nbsp;Back to list copmany</a>
        </div>
    </div>
</form>