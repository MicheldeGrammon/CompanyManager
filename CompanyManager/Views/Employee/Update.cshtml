@model CompanyManager.Models.Employee

<form method="post" asp-action="UpdatePost">
    <div class="borderBlack">
        <div asp-validation-summary="ModelOnly"></div>
        <input asp-for="Id" hidden />

        <h5>Create new employee</h5>
        <h5>Info</h5>
        <div class="row">
            <div class="col-2">
                <p>First name:</p>
            </div>
            <div class="colForm">
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName"></span>
            </div>
        </div>

        <div class="row">
            <div class="col-2">
                <p>Last name:</p>
            </div>
            <div class="colForm">
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName"></span>
            </div>
        </div>

        <div class="row">
            <div class="col-2">
                <p>Title:</p>
            </div>
            <div class="colForm">
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title"></span>
            </div>
        </div>

        <div class="row">
            <div class="col-2">
                <p>Birth date:</p>
            </div>
            <div class="colForm">
                <input type="date" asp-for="BirthDate" class="form-control" />
                <span asp-validation-for="BirthDate"></span>
            </div>
        </div>

        <div class="row">
            <div class="col-2">
                <p>Position:</p>
            </div>
            <div class="colForm">
                <input asp-for="Position" class="form-control" />
                <span asp-validation-for="Position"></span>
            </div>
        </div>

        <div class="flex">
            <input type="submit" class="btn btn-primary" value="Update" />
            &nbsp;
            <a asp-controller="Companies" asp-action="Index" class="btn btn-dark"><i class="fa-solid fa-right-from-bracket"></i> &nbsp;Back</a>
        </div>
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
