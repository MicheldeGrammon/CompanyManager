@model List<CompanyManager.Models.Company>

<div style="border:4px solid #000000">
    <div style="margin:25px">
        <h5>Companies</h5>

        <table class="table">
            <thead>
                <tr>
                    <th>
                        Company Name
                    </th>
                    <th>
                        City
                    </th>
                    <th>
                        State
                    </th>
                    <th>
                        Phone
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Name</td>
                        <td width="20%">@item.City</td>
                        <td width="20%">@item.State</td>
                        <td width="20%">@item.Phone</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
